<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>

    <FrameLayout
        android:id="@+id/download_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7000"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:id="@+id/download_panel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/download_panel_height"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/download_panel_margin_bottom"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/download_listview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/download_list_height"
                android:background="@color/main_background"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/download_exit_btn_height"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="下载路径:/sdcard/Videos/"/>

                <View
                    android:layout_width="0.2dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"/>

                <Button
                    android:id="@+id/exit_download"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@drawable/ripple_white_back"
                    android:src="@drawable/ic_arrow_down"
                    android:text="返回"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</layout>